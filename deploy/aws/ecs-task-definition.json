{
  "family": "rdf-starbase",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "containerDefinitions": [
    {
      "name": "rdf-starbase",
      "image": "rxcthefirst/rdf-starbase:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "RDFSTARBASE_SERVE_STATIC",
          "value": "true"
        },
        {
          "name": "RDFSTARBASE_REPOSITORY_PATH",
          "value": "/data/repositories"
        },
        {
          "name": "PYTHONUNBUFFERED",
          "value": "1"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "rdf-starbase-data",
          "containerPath": "/data/repositories",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/rdf-starbase",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "volumes": [
    {
      "name": "rdf-starbase-data",
      "efsVolumeConfiguration": {
        "fileSystemId": "${EFS_FILE_SYSTEM_ID}",
        "rootDirectory": "/",
        "transitEncryption": "ENABLED"
      }
    }
  ]
}
